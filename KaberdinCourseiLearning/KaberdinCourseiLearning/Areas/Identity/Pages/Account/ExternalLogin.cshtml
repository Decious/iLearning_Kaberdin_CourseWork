@page
@model ExternalLoginModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Register"];
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">@Localizer["LoginTitle", @Model.ProviderDisplayName]</h4>
<hr />

<p id="external-login-description" class="text-info">
    @Html.Raw(String.Format(Localizer["Description"].Value, $"<strong>{Model.ProviderDisplayName}</strong>"))
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger d-block"></span>
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger d-block"></span>
            </div>
            <button type="submit" class="btn btn-outline-primary">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
