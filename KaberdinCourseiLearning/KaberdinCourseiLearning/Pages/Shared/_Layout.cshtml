@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KaberdinCourseiLearning</title>
    <link href="~/scss/light-theme/light-theme.min.css" id="theme-light" disabled rel="stylesheet" />
    <link href="~/scss/dark-theme/dark-theme.min.css" id="theme-dark" disabled rel="stylesheet" />
    <script src="~/js/ThemeLoader.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/fontawesome.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container-fluid border-bottom box-shadow mb-3">
            <div class="row" id="header-searchbar" style="display:none">
                <div class="col-2 text-center"><button class="btn" id="navbarBtn"><i class="fa fa-arrow-left align-middle"></i></button></div>
                <div class="col-10">
                    <div class="input-group" name="searchbarGroup">
                        <input type="text" class="form-control" placeholder="@Localizer["SearchPlaceholder"]">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" name="SearchBtn" type="button"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" id="navbar">
                <a asp-area="" asp-page="/Index">
                    <img src="https://res.cloudinary.com/ilearningcourse/image/upload/c_crop,g_center,h_50,w_200/v1610630020/logo-light-new_envtpe.png">
                </a>
                <div class="col container">
                    <div class="row h-100">
                        <div class="d-none d-sm-flex m-auto col">
                            <div class="input-group" name="searchbarGroup">
                                <input type="text" class="form-control" placeholder="@Localizer["SearchPlaceholder"]">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" name="SearchBtn" type="button"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end align-middle align-content-center col m-auto text-right dropdown">
                            <div class="d-flex flex-wrap align-items-center">
                                <div class="d-sm-none d-inline p-2">
                                    <a class="p-0" id="searchbarBtn"><i class="fa fa-search"></i></a>
                                </div>
                                <div class="d-none d-sm-block" style="transform: scale(0.6); margin-right:-20px; margin-left:-25px;">
                                    <input type="checkbox" name="themeBtn" onclick="toggleTheme(this)" class="switch">
                                </div>
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div id="AlertMessage" class="alert" style="display:none;" role="alert">
            </div>
            <div id="PleaseWait" class="align-items-center" style="display:none;">
                <strong>@Localizer["PleaseWait"]</strong>
                <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - KaberdinCourseiLearning - <a asp-area="" asp-page="/">@Localizer["Privacy"]</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script>
        var dropzoneLocale = {
            dictDefaultMessage: "@Localizer["dictDefaultMessage"]",
            dictFallbackMessage: "@Localizer["dictFallbackMessage"]",
            dictFallbackText: "@Localizer["dictFallbackText"]",
            dictFileTooBig: "@Localizer["dictFileTooBig"]",
            dictInvalidFileType: "@Localizer["dictInvalidFileType"]",
            dictResponseError: "@Localizer["dictResponseError"]",
            dictCancelUpload: "@Localizer["dictCancelUpload"]",
            dictCancelUploadConfirmation: "@Localizer["dictCancelUploadConfirmation"]",
            dictRemoveFile: "@Localizer["dictRemoveFile"]",
            dictMaxFilesExceeded: "@Localizer["dictMaxFilesExceeded"]"
        };
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
