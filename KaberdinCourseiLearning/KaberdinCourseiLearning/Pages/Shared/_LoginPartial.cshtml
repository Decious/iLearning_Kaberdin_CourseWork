@using Microsoft.AspNetCore.Identity
@using KaberdinCourseiLearning.Areas.Identity
@inject SignInManager<CustomIdentity> SignInManager
@inject UserManager<CustomIdentity> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                 <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
            </li>
            if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User),"Administrator"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="AdminPanel" title="Manage">Admin-panel</a>
                </li>
            }
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
